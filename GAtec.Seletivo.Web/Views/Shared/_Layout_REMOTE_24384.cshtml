<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Content/js/jquery-1.12.3.min.js"></script>
    <script src="~/Content/js/kendo.all.min.js"></script>
    <link href="~/Content/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/kendo.default.min.css" rel="stylesheet" />
</head>
<body>

    <div class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
        @Html.ActionLink("GAtec Seletivo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>


        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
            </ul>
        </div>
        <div class="pull-right">
            <ul class="nav navbar-nav">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="pull-right">@Html.ActionLink("Logout", "Logout", "Login")</li>
                    <li class="pull-right margin-top-15">
                        <i class="pull-right glyphicon glyphicon-user text-white"></i>
                        <span class="text-white" style="padding-right: 5px;">
                            @User.Identity.Name
                        </span>
                    </li>
                }
                else
                {
                    <li class="pull-right">@Html.ActionLink("LogIn", "Index", "Login")</li>
                }

            </ul>
        </div>

    </div>

